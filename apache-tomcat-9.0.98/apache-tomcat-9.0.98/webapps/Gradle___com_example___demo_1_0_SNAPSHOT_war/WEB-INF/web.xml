<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>

    <!-- Servlet: Main Page -->
    <servlet>
        <servlet-name>ChristmasTreePageServlet</servlet-name>
        <servlet-class>com.example.servlets.ChristmasTreePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChristmasTreePageServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <!-- Servlet: Christmas Tree -->
    <servlet>
        <servlet-name>ChristmasTreeServlet</servlet-name>
        <servlet-class>com.example.servlets.ChristmasTreePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChristmasTreeServlet</servlet-name>
        <url-pattern>/christmas-tree</url-pattern>
    </servlet-mapping>

</web-app>
